<table class="quickviewpro_media_selection" cellspacing="0">
    <thead>
        <tr><th class="quickviewpro-edit-head"><?php echo $this->escapeHtml($this->getFieldsetLabel()) ?></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <?php foreach ($this->getElements() as $htmlId => $element): ?>
        <?php if ($this->getElementOriginalData($element, 'frontend_type') != 'radios'): ?>
            <tr><td>
                    <label for="<?php echo $htmlId?>">
                        <?php echo $this->getElementHtml($element) ?>
                        <strong><?php echo $this->getElementLabelTextHtml($element) ?></strong>
                        - <?php echo $this->getElementComment($element)?>
                    </label>
                </td>
                <td class="quickviewpro_demo_url">
                    <?php echo ($copyright = $this->getElementOriginalData($element, 'copyright'))? $copyright : '' ?>
                    <?php if ($url = $this->getElementOriginalData($element, 'demo_url')): ?>
                        <a href="<?php echo $this->escapeHtml($url) ?>">
                            <?php echo Mage::helper('quickviewpro')->__('View Demo and Info') ?>
                        </a>
                    <?php endif ?>
                </td>
            </tr>
        <?php endif ?>
    <?php endforeach ?>
    </tbody>
</table>

