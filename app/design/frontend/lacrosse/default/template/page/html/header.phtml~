echo $this->getChildHtml('pass');
// get shopping cart information
$cartQty = Mage::helper('checkout/cart')->getCart()->getItemsCount();
if (isset($cartQty) && $cartQty>0){
	if($cartQty==1){
	   $cart_items = $this->__('<a href="'.$this->getUrl('checkout/cart').'">CART(1 ITEM)</a>');
	}else{
	   $cart_items = $this->__('<a href="'.$this->getUrl('checkout/cart').'">CART(%s ITEMS)</a>', $cartQty);
	}
}else{
	$cart_items = '<a href="#">CART (0)</a>';
}
