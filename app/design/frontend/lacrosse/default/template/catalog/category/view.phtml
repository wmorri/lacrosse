/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<div class="big-apperal"><div class="image-div"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></div></div>';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
    
    $cat_id = $_category->getId();
?>

<?php if($cat_id==3 || $cat_id==4 || $cat_id==5):?>
<?php /*=============== TOP Navigation Menus Category Page ======================= */ ?>
	<?php if($_imgUrl): ?>				
		<?php echo $_imgHtml ?>				
	<?php endif; ?>
	<?php echo $this->getCmsBlockHtml() ?>	
	<?php /*============ Get Product for this category =================== */ ?>
	<?php 	$category = Mage::getModel('catalog/category')->load($cat_id); 
			$productCollection = Mage::getResourceModel('catalog/product_collection')->addCategoryFilter($category);
			$products = $category->getProductCollection()->addCategoryFilter($category)->addAttributeToSelect('*');			
			$products->getSelect()->order('RAND()');
			$products->getSelect()->limit(10);
	?>
		
	<div class="black-block">
        <h3 class="black-block-heading">You might also like...</h3>
          <div class="gray-area clearfix">
         <ul id="flexiselDemo2">
           <?php foreach ( $products as $_product ):?>
           <li>
	           <div class="croslll">
	                <div class="product-img"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(170,180) ?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" /></a></div>
	                <p class="product-para"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a></p>
	                <span class="rate"><?php echo Mage::helper('core')->currency($_product->getPrice(), true, false); ?></span> 
	                <?php if ($_product->isSaleable()): ?>
                       <a href="<?php echo Mage::helper('checkout/cart')->getAddUrl($_product);?>" class="product-buy"><img src="<?php echo $this->getSkinUrl('images/shop-button.png')?>" alt="shop"></a>
                    <?php else: ?>
                        <span class="rate"><?php echo $this->__('Out of stock') ?></span>
                    <?php endif; ?>
	           </div>
           </li>
           <?php endforeach; ?>      
          </ul>
        </div>
      </div>
      <div class="clear"></div>	
	
<?php else:?>
<?php /*=============== Normal Category Page ======================= */ ?>

	<?php if($_imgUrl): ?>				
		<?php echo $_imgHtml ?>				
	<?php endif; ?>
	<div id="product_container">		
		<?php if(Mage::app()->getStore()->getCode()=='teams'){?>
		<aside class="left-cat teamstores">
			<?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('teams_size_charts')->toHtml(); ?> 
		</aside>
		<?php }else{?>
		<aside class="left-cat">
			<?php echo $this->getChildHtml('codnitiveSidenavLeft');?>
			<?php echo $this->getChildHtml('layered_nav');?>		 
		</aside>	
		<?php }?> 	
		<?php if($this->isContentMode()): ?>
		<aside class="right-page">
		    <?php echo $this->getCmsBlockHtml() ?>
		</aside>
		<?php elseif($this->isMixedMode()): ?>
		<aside class="right-page">
		    <?php echo $this->getCmsBlockHtml() ?>
		    <?php echo $this->getProductListHtml() ?>
		</aside>
		<?php else: ?>
		<aside class="right-page">
		    <?php echo $this->getProductListHtml() ?>
		 </aside>
		<?php endif; ?>			
		<div class="clear"></div>
	</div>
<?php endif;?>

<?php /*============================================= Magento Default ========================================= ?>
<div class="page-title category-title">
    <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
        <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
    <?php endif; ?>
    <h1><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></h1>
</div>

<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

<?php if($_imgUrl): ?>
    <?php echo $_imgHtml ?>
<?php endif; ?>

<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="category-description std">
        <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
    </div>
    <?php endif; ?>

    
<?php echo $this->getChildHtml('layered_nav');?>
<?php echo $this->getChildHtml('codnitiveSidenavLeft');?>    

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
