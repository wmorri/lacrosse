<?xml version="1.0"?>
<config>
    <sections>
        <amconf translate="label" module="amconf">
            <label>Color Swatches Pro</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>800</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <hide_dropdowns translate="label">
                            <label>Hide Configuration Drop-Downs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hide_dropdowns>
                        <reload_images translate="label comment">
                            <label>Reload Product Images</label>
                            <comment>If set to 'Yes', default product images will be replaced with images of the specific simple product, configured by customer</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reload_images>
                        <noimage_img translate="label comment">
                            <label>Replacement Image If No Product Image Found</label>
                            <comment>This image will be used if no product image uploaded for the current selection. Do not upload any image if you do not need this functionality.</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>amconf/adminhtml_system_config_backend_image_noimg</backend_model>
                            <base_url type="media" scope_info="1">amconf/noimg</base_url>
                            <upload_dir>media/amconf/noimg</upload_dir>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </noimage_img>
                        <reload_name translate="label comment">
                            <label>Reload Product Name</label>
                            <comment>If set to 'Yes', default configurable product name will be replaced with the name of the specific simple product</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reload_name>
                        <show_clear translate="label comment">
                            <label>Show "Reset Configuration" option</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_clear>
                        <oneselect_reload translate="label comment">
                            <label>Reload Product Information When The First Attribute Selected</label>
                            <comment>If set to 'Yes', product images and descriptions will get reloaded after the first attribute is selected (first values of the other attributes will be used).</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </oneselect_reload>
                        <enable_list translate="label">
                            <label>Display color swatches on product list pages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_list>
						<listimg_size translate="label comment">
                            <label>Image size for product list, px</label>
                            <comment>Images will be automatically resized to be displayed on the product list page</comment>
							<frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
			                <show_in_store>1</show_in_store>                           
                        </listimg_size>
                        <show_title_view translate="label comment">
                            <label>Display Attribute Value Tooltip On Product View Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                   		
						</show_title_view>
                        <show_title_list translate="label comment">
                            <label>Display Attribute Value Tooltip On Product List Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                           
                        </show_title_list>
						<show_attribute_title translate="label comment">
                            <label>Display attribute titles under swatch images</label>
							<comment>On the product view page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                           
                        </show_attribute_title>
 					</fields>
                </general>
                <size>
                    <label>Image Size Settings (System)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <thumb translate="label comment">
                            <label>Size of the thumbnail image (px)</label>
                            <comment>56 pixels by default. Do not modify this value until you really need to.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb>
                        <preview translate="label comment">
                            <label>Size of the preview image (px)</label>
                            <comment>265 pixels by default. Do not modify this value until you really need to.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </preview>
                    </fields>
                </size>
                <product_image_size>
                    <label>Product Image Size</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <thumb translate="label comment">
                            <label>Size of the image (px)</label>
                            <comment>56 pixels by default. Do not modify this value until you really need to.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb>
                    </fields>
                </product_image_size>
                <zoom translate="label">
                    <label>Zoom</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable "Zoom" feature</label>
                            <comment>If set to 'No', default Magento zoom tool will be used</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>      
                        <viewer_width translate="label">
                            <label>Zoom Window width, px</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </viewer_width>
                        <viewer_height translate="label">
                            <label>Zoom Window height, px</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </viewer_height>         
                        <viewer_margin translate="label">
                            <label>Zoom Window margin, px</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </viewer_margin>        
                        <position translate="label">
                            <label>Zoom Window position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>amconf/source_viewerPosition</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </position>  
                        <show_product_name translate="label">
                            <label>Show Product Name</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>18</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_product_name>  
                        <zoom_activation translate="label">
                            <label>Turn on Zoom</label>
                            <frontend_type>select</frontend_type>
                            <source_model>amconf/source_zoomActivation</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_activation>
                    </fields>
                </zoom>
                <lightbox translate="label">
                    <label>LightBox</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable "Lightbox" feature</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>      
                        <change_main_img translate="label">
                            <label>Replace Main Image with the Selected in Lightbox</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </change_main_img>   
                    </fields>
                </lightbox>
            </groups>
        </amconf>
    </sections>
</config>
