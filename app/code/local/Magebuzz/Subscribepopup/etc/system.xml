<?xml version="1.0"?>
<config>
	<tabs>
			<magebuzz translate="label">
					<label>Magebuzz Add-ons</label>
					<sort_order>400</sort_order>
			</magebuzz>
	</tabs>
	<sections>
    <subscribepopup translate="label" module="subscribepopup">
			<label>Newsletter Popup</label>
			<tab>magebuzz</tab>
			<frontend_type>text</frontend_type>
			<sort_order>299</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General Setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enable newsletter popup</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</active>
						<include_js translate="label comment">
							<label>Include jQuery</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[Turn off jquery library if you already include it from another module]]></comment>
						</include_js>
						<form_title translate="label">
							<label>Popup Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</form_title>
						<hide_after_close translate="label comment">
							<label>Disable Popup after closing</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[After customers close the popup, it will not display again till cookie is expired.]]></comment>
						</hide_after_close>
						<timeout translate="label">
							<label>Cookies timeout</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Set a cookie to expire after X days]]></comment>
						</timeout>
						<time_delay translate="label">
							<label>Display popup after</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[After X seconds. Default the popup show immediately]]></comment>
						</time_delay>
						<notification translate="label">
							<label>Notification</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</notification>
						<display_all_page translate="label comment">
							<label>Display popup in all page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment><![CDATA[If no, the popup will display only in home page]]></comment>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display_all_page>
						<use_static_block translate="label comment">
							<label>Use the popup to display static block</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment><![CDATA[If yes, the popup will display content from selected static block instead of newsletter form]]></comment>
							<sort_order>25</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</use_static_block>
						<popup_static_block translate="label">
							<label>Static Block for the popup</label>
							<frontend_type>select</frontend_type>
							<sort_order>30</sort_order>
							<source_model>subscribepopup/system_config_cmspage</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><use_static_block>1</use_static_block></depends>
						</popup_static_block>
					</fields>
				</general>
				<coupon_code_setting translate="label">
					<label>Coupon Code Setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>40</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<allow_create translate="label comment">
							<label>Allow create coupon code</label>
							<frontend_type>select</frontend_type>
							<sort_order>1</sort_order>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</allow_create>
						<email_sender translate="label comment">
							<label>Email Sender</label>
							<comment><![CDATA[Select the email sender]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_identity</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_sender>
						<email_template translate="label comment">
              <label>Email Template</label>
							<comment><![CDATA[Select an email template]]></comment>
              <frontend_type>select</frontend_type>
						  <source_model>adminhtml/system_config_source_email_template</source_model>
						  <sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
            </email_template>
						<discount_type translate="label">
						  <label>Discount Type</label>
							<frontend_type>select</frontend_type>
							<source_model>subscribepopup/system_config_discounttype</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</discount_type>
						<discount_amount translate="label comment">
              <label>Discount Amount</label>
						  <frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Only enter numbers. Enter whole numbers for percents(10 = 10% discount).]]></comment>
            </discount_amount>
						<coupon_length translate="label comment">
              <label>Length of coupon code</label>
						  <frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
            </coupon_length>
						<coupon_expires translate="label comment">
              <label>Coupon expires in</label>
						  <frontend_type>text</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Entering "0" means no expiry.]]></comment>
            </coupon_expires>
						<number_coupon_use translate="label comment">
              <label>Uses per Coupon</label>
						  <frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
            </number_coupon_use>
					</fields>
				</coupon_code_setting>
			</groups>
		</subscribepopup>
  </sections>
</config>