<config>
    <modules>
        <Magestore_Storelocator>
            <version>0.1.0</version>
        </Magestore_Storelocator>
    </modules>
    <frontend>
        <routers>
            <storelocator>
                <use>standard</use>
                <args>
                    <module>Magestore_Storelocator</module>
                    <frontName>storelocator</frontName>
                </args>
            </storelocator>
        </routers>
        <layout>
            <updates>
                <storelocator>
                    <file>storelocator.xml</file>
                </storelocator>
            </updates>
        </layout>
		<translate>
            <modules>
                <Magestore_Storelocator>
                    <files>
                        <default>Magestore_Storelocator.csv</default>
                    </files>
                </Magestore_Storelocator>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
			<storelocatoradmin>
				<use>admin</use>
				<args>
					<module>Magestore_Storelocator</module>
					<frontName>storelocatoradmin</frontName>
				</args>
			</storelocatoradmin>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<storelocator>
					<file>storelocator.xml</file>
				</storelocator>
			</updates>
		</layout>
		<translate>
            <modules>
                <Magestore_Storelocator>
                    <files>
                        <default>Magestore_Storelocator.csv</default>
                    </files>
                </Magestore_Storelocator>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <storelocator>
                <class>Magestore_Storelocator_Model</class>
                <resourceModel>storelocator_mysql4</resourceModel>
            </storelocator>
            <storelocator_mysql4>
                <class>Magestore_Storelocator_Model_Mysql4</class>
                <entities>
                    <storelocator>
                        <table>storelocator</table>
                    </storelocator>
                    <image>
                        <table>storelocator_image</table>
                    </image>
                    <storevalue>
                        <table>storelocator_value</table>
                    </storevalue>
                    <tag>
                        <table>storelocator_tag</table>
                    </tag>					
                </entities>
            </storelocator_mysql4>
        </models>
        <resources>
            <storelocator_setup>
                <setup>
                    <module>Magestore_Storelocator</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </storelocator_setup>
            <storelocator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </storelocator_write>
            <storelocator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </storelocator_read>
        </resources>
        <blocks>
            <storelocator>
                <class>Magestore_Storelocator_Block</class>
            </storelocator>
        </blocks>
        <helpers>
            <storelocator>
                <class>Magestore_Storelocator_Helper</class>
            </storelocator>
        </helpers>
		<!-- <events>
			<controller_action_predispatch>
				<observers>
					<storelocator_observers>
						<class>storelocator/observer</class>
						<method>controllerActionPredispatch</method>
					</storelocator_observers>
				</observers>
			</controller_action_predispatch>
		</events> -->
    </global>
    <default>
        <storelocator>
            <general>
                <enable>1</enable>
                <allow_face>1</allow_face>
                <language>en_US</language>
                <choose_search>5</choose_search>
                <search_radius>10,100,500</search_radius>
                <search_radius_default>100</search_radius_default>
                <overwrite_exists_locator>0</overwrite_exists_locator>
                <page_title>Store Locator</page_title>
                <default_country></default_country>
                <sort_store>distance</sort_store>
                <distance_unit>km</distance_unit>
            </general>
        </storelocator>
    </default>
</config>