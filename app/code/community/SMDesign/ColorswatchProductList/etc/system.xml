<?xml version="1.0"?>
<config>
	<sections>
		<smdesign_colorswatch>
			<groups>
				<product_list translate="label">
					<label>Product list settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>600</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enable swatch on product list/grid page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>610</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable ColorSwatch selection on product list/grid page</comment>
						</enabled>
						
						<max_swatches>
							<label>Max number of swatches per product</label>
							<frontend_type>text</frontend_type>
							<sort_order>615</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</max_swatches>
						
						<enable_zoom>
							<label>Enable zoom on product list/grid page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>620</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable SMDZoom (if installed) selection on product list/grid page</comment>
						</enable_zoom>
						
						<list_image_width>
							<label>List Image Width</label>
							<frontend_type>text</frontend_type>
							<sort_order>630</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Image width (in pixels)</comment>
						</list_image_width>
						
						<list_image_height>
							<label>List Image Height</label>
							<frontend_type>text</frontend_type>
							<sort_order>640</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Image height (in pixels)</comment>
						</list_image_height>
					</fields>
				</product_list> 				
			</groups>
		</smdesign_colorswatch>
	</sections>
</config>
