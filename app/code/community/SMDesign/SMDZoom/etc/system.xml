<?xml version="1.0"?>
<config>
	<sections>
		<smdesign_smdzoom translate="label" module="smdzoom">
			<label>SMDesign Zoom</label>
				<tab>catalog</tab>
				<frontend_type>text</frontend_type>
				<sort_order>10</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<groups>
					<zoom translate="label">
					<label>Zoom Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enable Zoom</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>150</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Zoom script</comment>
						</enabled>
						
						<more_view_change_main_image>
							<label>Allow More View images to update Main image</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>160</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>When clicking on any of the "more view" images, main image will be updated</comment>
						</more_view_change_main_image>
						
						<show_preloader>
							<label>Show Preloader</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>165</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment></comment>
						</show_preloader>
						
						<image_width>
							<label>Image Width</label>
							<frontend_type>text</frontend_type>
							<sort_order>170</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Image width (in pixels)</comment>
						</image_width>
						
						<image_height>
							<label>Image Height</label>
							<frontend_type>text</frontend_type>
							<sort_order>180</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Image height (in pixels)</comment>
						</image_height>
						
						<thumbnail_width>
							<label>Thumbnail Width</label>
							<frontend_type>text</frontend_type>
							<sort_order>190</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Thumbnail width (in pixels)</comment>
						</thumbnail_width>
						
						<thumbnail_height>
							<label>Thumbnail Height</label>
							<frontend_type>text</frontend_type>
							<sort_order>200</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Thumbnail height (in pixels)</comment>
						</thumbnail_height>
						
						<wrapper_width>
							<label>Zoom Wrapper Width</label>
							<frontend_type>text</frontend_type>
							<sort_order>210</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The width of the zoom box (in pixels)</comment>
						</wrapper_width>
						
						<wrapper_height>
							<label>Zoom Wrapper Height</label>
							<frontend_type>text</frontend_type>
							<sort_order>220</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The height of the zoom box (in pixels)</comment>
						</wrapper_height>
						
						<wrapper_offset_left>
							<label>Zoom Wrapper Offset Left</label>
							<frontend_type>text</frontend_type>
							<sort_order>230</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment> The left offset of the zoom box (in pixels)</comment>
						</wrapper_offset_left>
						
						<wrapper_offset_top>
							<label>Zoom Wrapper Offset Top</label>
							<frontend_type>text</frontend_type>
							<sort_order>240</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The top offset of the zoom box (in pixels)</comment>
						</wrapper_offset_top>
						
						<zoom_type>
							<label>Zoom Type</label>
							<frontend_type>select</frontend_type>
							<source_model>smdzoom/zoomtype</source_model>
							<sort_order>250</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Zoom placement</comment>
						</zoom_type>
						
						<zoom_ratio>
							<label>Zoom Ratio</label>
							<frontend_type>text</frontend_type>
							<sort_order>260</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Zoom predefined aspect ratio;</comment>
						</zoom_ratio>
						
						<show_zoom_effect>
							<label>Show Zoom Effect</label>
							<frontend_type>select</frontend_type>
							<source_model>smdzoom/showzoomeffect</source_model>
							<sort_order>270</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Effect to show zoom box</comment>
						</show_zoom_effect>
						
						<hide_zoom_effect>
							<label>Hide Zoom Effect</label>
							<frontend_type>select</frontend_type>
							<source_model>smdzoom/hidezoomeffect</source_model>
							<sort_order>280</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Effect to hide zoom box</comment>
						</hide_zoom_effect>
						
						<show_info_error>
							<label>Show infos/errors</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>290</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Use for debuging</comment>
						</show_info_error>
						
					</fields>
				</zoom> 				
			</groups>
		</smdesign_smdzoom>
	</sections>
</config>