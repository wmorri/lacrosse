			<updates>
				<colorswatch>
					<file>colorswatch.xml</file>
				</colorswatch>
			</updates>
		</layout>
	</adminhtml>
	
	<frontend>
		<layout>
			<updates>
				<colorswatch>
					<file>colorswatch.xml</file>
				</colorswatch>
			</updates>
		</layout>
		
		<routers>
			<colorswatch>
				<use>standard</use>
				<args>
					<module>SMDesign_Colorswatch</module>
					<frontName>colorswatch</frontName>
				</args>
			</colorswatch> 
		</routers>
		
	</frontend>
	
<!--	END UPDATE LAYOUT -->




