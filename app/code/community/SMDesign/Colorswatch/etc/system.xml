<?xml version="1.0"?>
<config>
	<sections>
		<smdesign_colorswatch translate="label" module="colorswatch">
			<label>SMDesign ColorSwatch</label>
				<tab>catalog</tab>
				<frontend_type>text</frontend_type>
				<sort_order>10</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<groups>
					<general translate="label">
						<label>General</label>
						<frontend_type>text</frontend_type>
						<sort_order>10</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<fields>
							<enabled_colorswatch>
								<label>Enable ColorSwatch</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>10</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</enabled_colorswatch>
							
							<!-- show_options_configurable_block - ColorswatchProductView - sort order 20 -->
							
							<swatch_image_size_width>
								<label>Swatch image width</label>
								<frontend_type>text</frontend_type>
								<sort_order>50</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>Swatch image width (in pixels), set to "null" for auto</comment>
							</swatch_image_size_width>
							<swatch_image_size_height>
								<label>Swatch image height</label>
								<frontend_type>text</frontend_type>
								<sort_order>51</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>Swatch image height (in pixels), set to "null" for auto</comment>
							</swatch_image_size_height>
							
							<adminhtml_attribute_per_page>
								<label>Attribute per page</label>
								<frontend_type>text</frontend_type>
								<sort_order>1000</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>Attribute per page on image upload page (backend option)</comment>
							</adminhtml_attribute_per_page>
							
							
						</fields>
							
					</general>
				</groups>
		</smdesign_colorswatch>
	</sections>
</config>